<h1>Listing challenges</h1>

<table>
  <thead>
    <tr>
      <th>Challenger</th>
      <th>Challenged</th>
      <th>Value</th>
      <th>State</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.challenger_id %></td>
        <td><%= challenge.challenged_id %></td>
        <td><%= challenge.value %></td>
        <td><%= challenge.state_id %></td>
        <td><%= link_to 'Show', challenge %></td>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Challenge', new_challenge_path %>
